<%- include('../partials/header') %>

    <h2>Editar Venda</h2>

    <form action="/vendas/<%= venda.id %>/update" method="POST">
        <label>Data:</label>
        <input type="date" name="data" value="<%= venda.data.toISOString().substring(0,10) %>" required><br>

        <label>Valor:</label>
        <input type="number" step="0.01" name="valor" value="<%= venda.valor %>" required><br>

        <label>Quantidade:</label>
        <input type="number" name="quantidade" value="<%= venda.quantidade %>" required><br>

        <label>Produto ID:</label>
        <input type="number" name="produto_id" value="<%= venda.produto_id %>" required><br>

        <button type="submit">Atualizar</button>
    </form>

    <a href="/vendas">Voltar</a>

    <%- include('../partials/footer') %>